<view class="custom-picker">
  <view class="picker-trigger {{isOpen ? 'open' : ''}} {{disabled ? 'disabled' : ''}}" bindtap="onTapTrigger">
    <text class="picker-value {{selectedLabel ? '' : 'placeholder'}}">{{selectedLabel || placeholder}}</text>
    <text class="picker-arrow">{{isOpen ? '▲' : '▼'}}</text>
  </view>
  <view class="picker-dropdown" wx:if="{{isOpen}}">
    <view class="picker-option {{item.value === value ? 'selected' : ''}}" wx:for="{{normalizedOptions}}" wx:key="value" data-value="{{item.value}}" bindtap="onSelectOption">
      <text>{{item.label}}</text>
      <text class="check-mark" wx:if="{{item.value === value}}">✓</text>
    </view>
  </view>
  <view class="picker-mask" wx:if="{{isOpen}}" bindtap="onClose"></view>
</view>
