.custom-picker {
  position: relative;
}

.picker-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--gray-700);
  margin-bottom: 20rpx;
  display: block;
}

.picker-label .required {
  color: var(--red);
  margin-left: 6rpx;
}

.picker-trigger {
  width: 100%;
  padding: 28rpx 32rpx;
  border: 4rpx solid var(--gray-200);
  border-radius: 24rpx;
  font-size: 30rpx;
  color: var(--gray-900);
  background: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  transition: all 0.2s;
}

.picker-trigger:active {
  border-color: var(--gray-300);
}

.picker-trigger.active {
  border-color: var(--orange);
  border-radius: 24rpx 24rpx 0 0;
}

.picker-trigger.disabled {
  background: var(--gray-50);
  color: var(--gray-400);
}

.picker-trigger .placeholder {
  color: var(--gray-400);
}

.arrow {
  transition: transform 0.2s;
}

.arrow.up {
  transform: rotate(180deg);
}

.arrow-icon {
  font-size: 24rpx;
  color: var(--gray-400);
}

.picker-trigger.active .arrow-icon {
  color: var(--orange);
}

.dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--white);
  border: 4rpx solid var(--orange);
  border-top: none;
  border-radius: 0 0 24rpx 24rpx;
  overflow: hidden;
  z-index: 100;
  max-height: 400rpx;
  overflow-y: auto;
}

.option {
  padding: 28rpx 32rpx;
  font-size: 30rpx;
  color: var(--gray-700);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background 0.15s;
}

.option:active {
  background: var(--gray-50);
}

.option.selected {
  color: var(--orange);
  font-weight: 500;
}

.option .check {
  color: var(--orange);
  font-size: 32rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
}
