.custom-picker { position: relative; }
.picker-trigger { display: flex; justify-content: space-between; align-items: center; height: 96rpx; padding: 0 32rpx; background: var(--white); border: 4rpx solid var(--gray-200); border-radius: 24rpx; box-sizing: border-box; transition: all 0.2s; }
.picker-trigger.open { border-color: var(--orange); border-radius: 24rpx 24rpx 0 0; }
.picker-trigger.disabled { background: var(--gray-100); opacity: 0.6; }
.picker-value { font-size: 30rpx; color: var(--gray-900); }
.picker-value.placeholder { color: var(--gray-400); }
.picker-arrow { font-size: 20rpx; color: var(--gray-400); }
.picker-dropdown { position: absolute; top: 100%; left: 0; right: 0; background: var(--white); border: 4rpx solid var(--orange); border-top: none; border-radius: 0 0 24rpx 24rpx; z-index: 100; max-height: 400rpx; overflow-y: auto; }
.picker-option { display: flex; justify-content: space-between; align-items: center; padding: 24rpx 32rpx; font-size: 30rpx; color: var(--gray-700); border-bottom: 1rpx solid var(--gray-100); }
.picker-option:last-child { border-bottom: none; }
.picker-option.selected { color: var(--orange); font-weight: 500; }
.check-mark { color: var(--orange); font-weight: 700; }
.picker-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 99; }
