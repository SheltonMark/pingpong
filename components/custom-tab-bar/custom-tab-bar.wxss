.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 136rpx;
  background: var(--white);
  display: flex;
  border-top: 1rpx solid var(--gray-200);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  position: relative;
}

.tab-indicator {
  position: absolute;
  top: -1rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: var(--orange);
  border-radius: 0 0 6rpx 6rpx;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.4;
  transition: all 0.2s;
}

.tab-item.active .tab-icon {
  opacity: 1;
}

.tab-label {
  font-size: 20rpx;
  color: var(--gray-400);
  font-weight: 500;
  transition: all 0.2s;
}

.tab-item.active .tab-label {
  color: var(--orange);
  font-weight: 600;
}
