<view class="privacy-modal" wx:if="{{show}}">
  <view class="modal-mask"></view>
  <view class="modal-content">
    <view class="modal-title">用户协议与隐私政策</view>
    <view class="modal-body">
      <text>欢迎使用校乒网！在使用前，请阅读并同意</text>
      <text class="link" bindtap="onTapPrivacy">《隐私政策》</text>
      <text>和</text>
      <text class="link" bindtap="onTapPrivacy">《用户协议》</text>
    </view>
    <view class="modal-buttons">
      <button class="btn-disagree" bindtap="onDisagree">不同意</button>
      <button class="btn-agree" bindtap="onAgree">同意并继续</button>
    </view>
  </view>
</view>
