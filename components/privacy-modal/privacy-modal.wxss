.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: calc(100% - 96rpx);
  max-height: 70%;
  background: var(--white);
  border-radius: 40rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 40rpx 40rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid var(--gray-100);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.modal-body {
  padding: 32rpx 40rpx;
  overflow-y: auto;
  flex: 1;
}

.welcome {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 1.7;
  margin-bottom: 24rpx;
}

.desc {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 1.7;
  margin-bottom: 24rpx;
}

.link {
  color: var(--orange);
}

.info-list {
  padding-left: 16rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 2;
}

.tip {
  display: block;
  font-size: 26rpx;
  color: var(--gray-600);
  line-height: 1.7;
}

.modal-footer {
  padding: 32rpx 40rpx 40rpx;
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
}

.btn-secondary {
  background: var(--gray-100);
  color: var(--gray-600);
}

.btn-secondary:active {
  background: var(--gray-200);
}

.btn-primary {
  background: var(--orange);
  color: var(--white);
}

.btn-primary:active {
  background: var(--orange-dark);
}
