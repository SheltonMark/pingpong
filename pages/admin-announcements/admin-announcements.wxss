.announcements-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
}

.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.toolbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.create-btn {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  border: none;
}

.announcement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.announcement-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.announcement-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.announcement-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.announcement-status {
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.status-active {
  background: #D1FAE5;
  color: #059669;
}

.status-hidden {
  background: #F5F5F5;
  color: #9CA3AF;
}

.announcement-content {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.announcement-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.edit-btn, .delete-btn {
  height: 56rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  border-radius: 12rpx;
  line-height: 56rpx;
}

.edit-btn {
  background: #F5F5F5;
  color: #374151;
}

.delete-btn {
  background: #FEE2E2;
  color: #DC2626;
}

.loading, .empty {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}

/* Editor Modal */
.editor-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.editor-modal {
  width: 100%;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  overflow-y: auto;
}

.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.editor-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.editor-close {
  font-size: 48rpx;
  color: #9CA3AF;
  padding: 8rpx;
  line-height: 1;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1A1A1A;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9CA3AF;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 20rpx;
  margin-top: 16rpx;
}
