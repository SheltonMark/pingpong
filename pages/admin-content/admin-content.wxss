.content-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
}

.menu-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.menu-info {
  flex: 1;
}

.menu-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #9CA3AF;
}

.menu-arrow {
  font-size: 32rpx;
  color: #9CA3AF;
}
