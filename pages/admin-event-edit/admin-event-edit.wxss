.edit-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

.form-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 8rpx 0;
}

.form-item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.form-item.row .form-label {
  margin-bottom: 0;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1A1A1A;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9CA3AF;
}

.submit-btn {
  position: fixed;
  bottom: 48rpx;
  left: 24rpx;
  right: 24rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 0, 0.35);
}

.submit-btn[disabled] {
  opacity: 0.6;
}
