<view class="scores-page">
  <view class="match-list">
    <view class="match-item" wx:for="{{matches}}" wx:key="id">
      <view class="match-event">{{item.event_title}}</view>
      <view class="match-players">
        <view class="player {{item.winner_id === item.player1_id ? 'winner' : ''}}">
          <text class="player-name">{{item.player1_name}}</text>
          <text class="player-score">{{item.player1_games}}</text>
        </view>
        <text class="vs">VS</text>
        <view class="player {{item.winner_id === item.player2_id ? 'winner' : ''}}">
          <text class="player-score">{{item.player2_games}}</text>
          <text class="player-name">{{item.player2_name}}</text>
        </view>
      </view>
      <view class="match-winner">
        <text class="winner-label">胜者：</text>
        <text class="winner-name">{{item.winner_name}}</text>
      </view>
      <view class="match-actions">
        <button class="reject-btn" bindtap="onReject" data-id="{{item.id}}">驳回</button>
        <button class="approve-btn" bindtap="onApprove" data-id="{{item.id}}">通过</button>
      </view>
    </view>
  </view>

  <view class="loading" wx:if="{{isLoading}}">加载中...</view>
  <view class="empty" wx:if="{{!isLoading && matches.length === 0}}">
    <text class="empty-icon">✅</text>
    <text class="empty-text">暂无待审核比分</text>
  </view>
</view>
