.scores-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
}

.match-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.match-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.match-event {
  font-size: 26rpx;
  color: #9CA3AF;
  margin-bottom: 20rpx;
}

.match-players {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.player {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.player.winner .player-name {
  color: #FF6B00;
  font-weight: 600;
}

.player.winner .player-score {
  background: #FF6B00;
  color: #FFFFFF;
}

.player-name {
  font-size: 28rpx;
  color: #1A1A1A;
}

.player-score {
  font-size: 32rpx;
  font-weight: 700;
  background: #F5F5F5;
  color: #1A1A1A;
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vs {
  font-size: 24rpx;
  color: #9CA3AF;
  font-weight: 600;
}

.match-winner {
  text-align: center;
  margin-bottom: 20rpx;
}

.winner-label {
  font-size: 24rpx;
  color: #9CA3AF;
}

.winner-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B00;
}

.match-actions {
  display: flex;
  gap: 16rpx;
}

.reject-btn, .approve-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.reject-btn {
  background: #F5F5F5;
  color: #6B7280;
}

.approve-btn {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
}

.loading {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}
