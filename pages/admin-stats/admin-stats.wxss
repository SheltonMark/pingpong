.stats-page {
  min-height: 100vh;
  background: #F5F5F5;
}

.tab-bar {
  display: flex;
  background: #FFFFFF;
  padding: 0 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #9CA3AF;
  position: relative;
}

.tab-item.active {
  color: #FF6B00;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: #FF6B00;
  border-radius: 3rpx;
}

.stats-content {
  padding: 24rpx;
}

.section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 20rpx;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 0;
  background: #F9FAFB;
  border-radius: 12rpx;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF6B00;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

.rank-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-index {
  width: 48rpx;
  height: 48rpx;
  background: #F5F5F5;
  color: #6B7280;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.rank-item:nth-child(1) .rank-index {
  background: #FBBF24;
  color: #FFFFFF;
}

.rank-item:nth-child(2) .rank-index {
  background: #9CA3AF;
  color: #FFFFFF;
}

.rank-item:nth-child(3) .rank-index {
  background: #CD7F32;
  color: #FFFFFF;
}

.rank-name {
  flex: 1;
  font-size: 28rpx;
  color: #1A1A1A;
}

.rank-count {
  font-size: 26rpx;
  color: #6B7280;
}

.trend-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.trend-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.trend-date {
  width: 180rpx;
  font-size: 24rpx;
  color: #9CA3AF;
}

.trend-bar-wrapper {
  flex: 1;
  height: 20rpx;
  background: #F5F5F5;
  border-radius: 10rpx;
  overflow: hidden;
}

.trend-bar {
  height: 100%;
  background: linear-gradient(90deg, #FF6B00, #FF8533);
  border-radius: 10rpx;
  min-width: 8rpx;
}

.trend-count {
  width: 60rpx;
  font-size: 24rpx;
  color: #374151;
  text-align: right;
}

.event-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.event-item {
  padding: 16rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
}

.event-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.event-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1A1A1A;
}

.event-status {
  font-size: 22rpx;
  color: #6B7280;
  background: #FFFFFF;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.event-registrations {
  font-size: 24rpx;
  color: #9CA3AF;
}

.loading {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}
