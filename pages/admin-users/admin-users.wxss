.admin-users-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
}

.search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 140rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  border-radius: 16rpx;
  line-height: 80rpx;
  padding: 0;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.user-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.user-main {
  margin-bottom: 16rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.user-type {
  font-size: 22rpx;
  background: #F5F5F5;
  color: #6B7280;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.user-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #9CA3AF;
}

.user-roles {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.role-tag {
  font-size: 22rpx;
  background: #FFF5EB;
  color: #FF6B00;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.user-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #F5F5F5;
}

.assign-btn {
  height: 60rpx;
  padding: 0 24rpx;
  background: #F5F5F5;
  color: #374151;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  border-radius: 12rpx;
  line-height: 60rpx;
}

.loading, .empty {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #FF6B00;
}
