.admin-page {
  min-height: 100vh;
  background: #F5F5F5;
}

.header {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  padding: 48rpx 32rpx 32rpx;
  color: #FFFFFF;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
}

.role-tags {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.role-tag {
  font-size: 22rpx;
  background: rgba(255,255,255,0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.stats-section {
  margin: -20rpx 24rpx 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.stat-num {
  font-size: 44rpx;
  font-weight: 700;
  color: #FF6B00;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.menu-section {
  padding: 0 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 20rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.menu-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 36rpx 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.menu-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.menu-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #1A1A1A;
}

.loading {
  text-align: center;
  padding: 100rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}

.no-permission {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: #F5F5F5;
}

.no-permission-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.no-permission-text {
  font-size: 32rpx;
  color: #9CA3AF;
}
