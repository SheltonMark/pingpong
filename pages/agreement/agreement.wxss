.agreement-page {
  min-height: 100vh;
  background: #FFFFFF;
  padding: 32rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.8;
}

.update-date {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 32rpx;
  display: block;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 24rpx;
  display: block;
}

.section-content {
  display: block;
}

.section-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.list-item {
  display: block;
  padding-left: 8rpx;
}
