.check-in-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
}

.status-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.status-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #E5E7EB, #D1D5DB);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  margin: 0 auto 32rpx;
}

.status-icon.active {
  background: linear-gradient(135deg, #D1FAE5, #A7F3D0);
}

.status-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
}

.status-desc {
  font-size: 28rpx;
  color: #9CA3AF;
  margin-top: 12rpx;
  display: block;
}

.check-in-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 48rpx;
  border: none;
}

.check-in-btn.active {
  background: linear-gradient(135deg, #10B981, #059669);
  color: #FFFFFF;
  box-shadow: 0 8rpx 28rpx rgba(16, 185, 129, 0.35);
}

.check-in-btn.disabled {
  background: #E5E7EB;
  color: #9CA3AF;
}

.refresh-btn {
  margin-top: 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

.records-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.card-count {
  font-size: 28rpx;
  color: #FF6B00;
  font-weight: 500;
}

.record-list {
  padding: 0 36rpx 36rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.record-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #1A1A1A;
}

.record-point {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
}

.record-time {
  font-size: 26rpx;
  color: #10B981;
}

.empty {
  text-align: center;
  padding: 60rpx;
  color: #9CA3AF;
  font-size: 28rpx;
}
