/* pages/event-detail/event-detail.wxss */
.event-detail-page {
  min-height: 100vh;
  background: var(--gray-50);
  padding-bottom: 160rpx;
}

/* 头部 */
.event-header {
  position: relative;
  padding: 80rpx 32rpx 48rpx;
}

.header-bg {
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, var(--orange), #FF8533);
}

.header-content {
  position: relative;
  z-index: 1;
}

.event-type-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  background: rgba(255,255,255,0.2);
  color: #fff;
}

.event-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.event-status-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.9);
}

.event-status-tag.registration { color: var(--green); }
.event-status-tag.pending_start { color: #3B82F6; }
.event-status-tag.ongoing { color: var(--orange); }
.event-status-tag.finished { color: var(--gray-400); }

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #fff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid var(--gray-100);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: var(--gray-500);
  position: relative;
}

.tab-item.active {
  color: var(--orange);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0; left: 50%;
  transform: translateX(-50%);
  width: 60rpx; height: 6rpx;
  background: var(--orange);
  border-radius: 3rpx;
}

/* 内容区 */
.tab-content {
  padding: 24rpx 32rpx;
}

.info-card, .desc-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--gray-100);
}

.info-row:last-child { border-bottom: none; }

.info-label {
  font-size: 28rpx;
  color: var(--gray-500);
}

.info-value {
  font-size: 28rpx;
  color: var(--gray-900);
  font-weight: 500;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
  margin-bottom: 16rpx;
}

.desc-content {
  font-size: 28rpx;
  color: var(--gray-600);
  line-height: 1.6;
}

.desc-images {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.desc-image {
  width: 100%;
  border-radius: 12rpx;
}

/* 限制rich-text中图片的尺寸 */
.desc-content image,
.desc-content img {
  max-width: 100% !important;
  height: auto !important;
  display: block;
  margin: 16rpx 0;
}

/* 选手列表 */
.player-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--gray-100);
}

.player-item:last-child { border-bottom: none; }

.player-rank {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--gray-100);
  color: var(--gray-500);
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.player-avatar {
  width: 80rpx; height: 80rpx;
  border-radius: 50%;
  background: var(--gray-100);
}

.player-info {
  margin-left: 24rpx;
  flex: 1;
}

.player-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--gray-900);
}

.player-college {
  font-size: 24rpx;
  color: var(--gray-400);
}

/* 对阵表 */
.match-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.match-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
}

.match-round {
  font-size: 24rpx;
  color: var(--gray-400);
  margin-bottom: 20rpx;
  text-align: center;
}

.match-players {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
}

.player-side {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.match-players .player {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.match-players .score {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--orange);
}

.match-players .vs {
  font-size: 24rpx;
  color: var(--gray-300);
  font-weight: 700;
}

.match-status {
  text-align: center;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--gray-400);
}

.match-status.ongoing {
  color: var(--orange);
}

.match-status.finished {
  color: var(--green);
}

/* 底部按钮 */
.bottom-action {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.register-btn {
  width: 100%;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, var(--orange), var(--orange-dark));
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  width: 100%;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-600);
  background: var(--gray-100);
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-tip, .loading {
  text-align: center;
  padding: 80rpx;
  color: var(--gray-400);
  font-size: 28rpx;
}

/* 领队申请卡片 */
.captain-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.captain-content {
  margin-top: 16rpx;
}

.captain-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.captain-status.approved {
  background: rgba(16, 185, 129, 0.1);
  color: var(--green);
}

.captain-status.pending {
  background: rgba(245, 158, 11, 0.1);
  color: var(--orange);
}

.captain-status.rejected {
  background: rgba(239, 68, 68, 0.1);
  color: #EF4444;
  flex-wrap: wrap;
}

.status-icon {
  font-size: 32rpx;
}

.captain-tip {
  text-align: center;
  padding: 24rpx;
}

.captain-tip text {
  display: block;
  font-size: 26rpx;
  color: var(--gray-500);
  margin-bottom: 24rpx;
}

.apply-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  background: linear-gradient(135deg, var(--orange), var(--orange-dark));
  border-radius: 40rpx;
  border: none;
}

.apply-btn.small {
  margin-top: 16rpx;
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

/* 团体赛提示 */
.team-tip {
  text-align: center;
  padding: 24rpx;
  color: var(--gray-500);
  font-size: 26rpx;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 16rpx;
}
