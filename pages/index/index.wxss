.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F5F5F5;
}

.header {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C5A 100%);
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.content {
  flex: 1;
  padding: 40rpx 30rpx;
}

.hello-box {
  background-color: white;
  border-radius: 20rpx;
  padding: 60rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.hello-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.time-text {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.fetch-btn {
  background-color: #FF6B35;
  color: white;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border: none;
}

.fetch-btn:active {
  opacity: 0.8;
}

.tip-text {
  margin-top: 30rpx;
  text-align: center;
}

.error {
  font-size: 24rpx;
  color: #FF3B30;
}
