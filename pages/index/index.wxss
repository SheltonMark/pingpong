.home-page {
  min-height: 100vh;
  background: var(--gray-50);
  padding-bottom: 140rpx;
}

/* ============ 未登录欢迎页 ============ */
.welcome-section {
  position: relative;
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.welcome-section.full-height {
  min-height: calc(100vh - 140rpx);
}

.welcome-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--orange) 0%, #FF8533 100%);
}

.welcome-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.welcome-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.welcome-title {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--white);
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.welcome-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-bottom: 60rpx;
}

.login-btn {
  background: var(--white);
  color: var(--orange);
  font-size: 32rpx;
  font-weight: 600;
  padding: 28rpx 100rpx;
  border-radius: 48rpx;
  border: none;
}

.login-btn:active {
  opacity: 0.9;
}

/* ============ 已登录 - 头部区域 ============ */
.header-section {
  position: relative;
  padding: 100rpx 32rpx 180rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--orange) 0%, #FF8533 100%);
}

/* 橙色圆形装饰 */
.header-bg::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-bg::after {
  content: '';
  position: absolute;
  top: 50rpx;
  right: 80rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 1;
}

/* 学校选择器 */
.school-selector {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}

.school-name {
  font-size: 26rpx;
  color: var(--white);
  font-weight: 500;
}

.selector-arrow {
  font-size: 20rpx;
  color: var(--white);
  opacity: 0.8;
}

/* 问候语 */
.greeting-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.greeting-name {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--white);
}

/* ============ 公告卡片 ============ */
.announcement-card {
  position: relative;
  margin: -120rpx 32rpx 24rpx;
  padding: 28rpx 32rpx;
  background: var(--white);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.announcement-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: var(--orange-light);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.tag-icon {
  font-size: 24rpx;
}

.tag-text {
  font-size: 22rpx;
  color: var(--orange);
  font-weight: 500;
}

.announcement-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.announcement-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.announcement-desc {
  font-size: 24rpx;
  color: var(--gray-400);
}

.announcement-emoji {
  font-size: 80rpx;
  flex-shrink: 0;
}

/* ============ 快捷入口 ============ */
.quick-section {
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
  background: var(--white);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.quick-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quick-icon-wrapper.bg-yellow {
  background: linear-gradient(135deg, #FFE082 0%, #FFD54F 100%);
}

.quick-icon-wrapper.bg-pink {
  background: linear-gradient(135deg, #F8BBD9 0%, #F48FB1 100%);
}

.quick-icon-wrapper.bg-green {
  background: linear-gradient(135deg, #A5D6A7 0%, #81C784 100%);
}

.quick-icon-wrapper.bg-blue {
  background: linear-gradient(135deg, #90CAF9 0%, #64B5F6 100%);
}

.quick-icon-img {
  width: 56rpx;
  height: 56rpx;
}

.quick-icon-text {
  font-size: 48rpx;
}

.quick-label {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--gray-700);
}

/* ============ 积分排行 ============ */
.ranking-section {
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
  background: var(--white);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.section-more {
  font-size: 26rpx;
  color: var(--orange);
  font-weight: 500;
}

.ranking-list {
  display: flex;
  flex-direction: column;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  gap: 20rpx;
  border-bottom: 1rpx solid var(--gray-100);
}

.ranking-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.ranking-item:first-child {
  padding-top: 0;
}

/* 排名徽章 */
.rank-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.rank-badge.rank-1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.rank-badge.rank-2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #A0A0A0 100%);
}

.rank-badge.rank-3 {
  background: linear-gradient(135deg, #CD7F32 0%, #B8860B 100%);
}

.rank-badge.rank-4,
.rank-badge.rank-5,
.rank-badge.rank-6,
.rank-badge.rank-7,
.rank-badge.rank-8,
.rank-badge.rank-9,
.rank-badge.rank-10 {
  background: var(--gray-200);
}

.rank-num {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--white);
}

.rank-badge.rank-4 .rank-num,
.rank-badge.rank-5 .rank-num,
.rank-badge.rank-6 .rank-num,
.rank-badge.rank-7 .rank-num,
.rank-badge.rank-8 .rank-num,
.rank-badge.rank-9 .rank-num,
.rank-badge.rank-10 .rank-num {
  color: var(--gray-500);
}

/* 头像 */
.rank-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--gray-100);
  flex-shrink: 0;
}

/* 用户信息 */
.rank-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.rank-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.rank-college {
  font-size: 24rpx;
  color: var(--gray-400);
}

/* 积分 */
.rank-score {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.score-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--orange);
}

.score-label {
  font-size: 22rpx;
  color: var(--gray-400);
}
