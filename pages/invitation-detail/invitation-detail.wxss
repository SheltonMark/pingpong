.detail-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 160rpx;
}

.invitation-card {
  background: #FFFFFF;
  padding: 32rpx;
}

.inv-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.creator-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.creator-info { flex: 1; }

.creator-name {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
}

.inv-school {
  font-size: 26rpx;
  color: #9CA3AF;
}

.inv-status {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
}

.status-open { background: #D1FAE5; color: #10B981; }
.status-full { background: #FEF3C7; color: #F59E0B; }
.status-ongoing { background: #DBEAFE; color: #3B82F6; }
.status-finished { background: #E5E7EB; color: #6B7280; }

.inv-body {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.inv-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.inv-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.inv-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.participants-section { padding-top: 24rpx; }

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.participant-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.participant-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.participant-name {
  font-size: 26rpx;
  color: #333;
}

.participant-tag {
  font-size: 22rpx;
  color: #FF6B00;
  background: #FFF5EB;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.match-section {
  background: #FFFFFF;
  margin-top: 20rpx;
  padding: 32rpx;
}

.match-card {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
}

.players {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 24rpx;
}

.player {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.player image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.player text {
  font-size: 28rpx;
  font-weight: 500;
}

.vs {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF6B00;
}

.scores {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.score-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
}

.game-label {
  font-size: 26rpx;
  color: #9CA3AF;
  width: 100rpx;
}

.score {
  font-size: 32rpx;
  font-weight: 600;
  width: 60rpx;
  text-align: center;
}

.score.winner { color: #10B981; }
.score-sep { color: #999; }

.total-score {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #E5E7EB;
}

.total {
  font-size: 48rpx;
  font-weight: 700;
}

.total.winner { color: #FF6B00; }
.total-sep {
  font-size: 36rpx;
  color: #999;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}

.action-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
}

.action-btn.secondary {
  background: #F5F5F5;
  color: #666;
}
