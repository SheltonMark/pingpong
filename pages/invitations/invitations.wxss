.invitations-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 0 24rpx 24rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #9CA3AF;
  text-transform: uppercase;
  padding: 32rpx 0 20rpx;
  display: block;
}

.invitation-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.invitation-card.processed {
  opacity: 0.6;
}

.invitation-info {
  display: flex;
  align-items: center;
}

.inviter-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 28rpx;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.invitation-content {
  flex: 1;
  margin-left: 24rpx;
}

.invitation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.invitation-meta {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.invitation-status {
  font-size: 24rpx;
  font-weight: 600;
}

.invitation-status.accepted {
  color: #10B981;
}

.invitation-status.rejected {
  color: #9CA3AF;
}

.invitation-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 28rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.action-btn.reject {
  background: #F5F5F5;
  color: #666;
}

.action-btn.accept {
  background: #FF6B00;
  color: #FFFFFF;
}

.loading {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}
