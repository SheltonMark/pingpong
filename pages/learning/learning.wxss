.learning-page {
  min-height: 100vh;
  background: #F5F5F5;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

.tabs {
  display: flex;
  background: #FFFFFF;
  padding: 32rpx 40rpx 24rpx;
  gap: 24rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab {
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  color: #9CA3AF;
  background: #F5F5F5;
  border-radius: 40rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.tab.active {
  background: #1A1A1A;
  color: #FFFFFF;
}

.material-list {
  height: calc(100vh - 120rpx);
  padding: 24rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 视频卡片 */
.video-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.video-cover {
  height: 360rpx;
  background: linear-gradient(135deg, #374151, #1f2937);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.cover-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.play-icon {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 20rpx 0 20rpx 36rpx;
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.95);
  margin-left: 10rpx;
}

.video-info {
  padding: 28rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
  line-height: 1.4;
}

.video-meta {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 12rpx;
  display: block;
}

/* PDF文档卡片 */
.doc-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.doc-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #EF4444, #DC2626);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-right: 28rpx;
}

.doc-icon.ppt-icon {
  background: linear-gradient(135deg, #F97316, #EA580C);
}

.doc-info {
  flex: 1;
}

.doc-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
  line-height: 1.4;
}

.doc-meta {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.doc-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #D1D5DB;
  border-right: 4rpx solid #D1D5DB;
  transform: rotate(45deg);
}

.loading, .no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}
