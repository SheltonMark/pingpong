page {
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

.match-history-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
  box-sizing: border-box;
  overflow-x: hidden;
  width: 100%;
}

.stats-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 56rpx;
  font-weight: 700;
}

.stat-num.win {
  color: #10B981;
}

.stat-num.lose {
  color: #EF4444;
}

.stat-num.rate {
  color: #FF6B00;
}

.stat-label {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
}

.records-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.card-header {
  padding: 36rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.record-list {
  height: calc(100vh - 400rpx);
  box-sizing: border-box;
  width: 100%;
}

.record-item {
  background: #F9FAFB;
  border-radius: 24rpx;
  padding: 28rpx;
  margin: 20rpx 36rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
}

.record-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.opponent-avatar {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 20rpx;
  background: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.opponent-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
  overflow: hidden;
}

.opponent-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.match-meta {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-right {
  text-align: right;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.result {
  font-size: 32rpx;
  font-weight: 700;
}

.result.win {
  color: #10B981;
}

.result.lose {
  color: #EF4444;
}

.loading, .no-more {
  text-align: center;
  padding: 32rpx 36rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

.empty {
  text-align: center;
  padding: 60rpx 36rpx;
  color: #9CA3AF;
  font-size: 28rpx;
}
