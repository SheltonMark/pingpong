.my-events-page {
  min-height: 100vh;
  background: #F5F5F5;
}

.tabs {
  display: flex;
  background: #FFFFFF;
  padding: 0 40rpx 24rpx;
  gap: 16rpx;
}

.tab {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
  background: #F5F5F5;
  border-radius: 40rpx;
  font-weight: 500;
}

.tab.active {
  background: #1A1A1A;
  color: #FFFFFF;
}

.event-list {
  padding: 24rpx;
}

.event-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.event-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.event-status {
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.event-status.ongoing {
  background: #D1FAE5;
  color: #065F46;
}

.event-status.registering {
  background: #FEF3C7;
  color: #D97706;
}

.event-status.finished {
  background: #E5E7EB;
  color: #6B7280;
}

.event-type {
  font-size: 24rpx;
  color: #9CA3AF;
}

.event-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.event-stats {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #FFF5EB;
  border-radius: 20rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF6B00;
  margin-top: 8rpx;
  display: block;
}

.event-bottom {
  margin-top: 20rpx;
}

.event-date {
  font-size: 26rpx;
  color: #9CA3AF;
}

.loading {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}
