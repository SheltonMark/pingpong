.profile-page {
  min-height: 100vh;
  background: var(--gray-50);
  padding-bottom: 140rpx;
}

/* 头部区域包装器 */
.header-wrapper {
  position: relative;
  padding-bottom: 60rpx;
}

/* 橙色背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 380rpx;
  background: linear-gradient(135deg, var(--orange) 0%, #FF8533 100%);
}

/* 橙色圆形装饰 */
.header-bg::before {
  content: '';
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 350rpx;
  height: 350rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-bg::after {
  content: '';
  position: absolute;
  top: 60rpx;
  right: 100rpx;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

/* 用户信息内容 */
.header-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding: 100rpx 32rpx 40rpx;
}

.avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 70rpx;
}

.login-text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--white);
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: var(--white);
}

.user-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--white);
}

.user-college {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.complete-btn {
  font-size: 26rpx;
  color: var(--white);
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  display: inline-block;
  margin-top: 8rpx;
}

/* 数据统计卡片 */
.stats-card {
  position: relative;
  z-index: 10;
  margin: 0 32rpx;
  padding: 40rpx 32rpx;
  background: var(--white);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--gray-900);
}

.stat-value.orange {
  color: var(--orange);
}

.stat-label {
  font-size: 26rpx;
  color: var(--gray-400);
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background: var(--gray-200);
}

/* 菜单列表 */
.menu-section {
  margin: 24rpx 32rpx;
  background: var(--white);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx 32rpx;
  gap: 24rpx;
  border-bottom: 1rpx solid var(--gray-100);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--gray-50);
}

.menu-icon {
  font-size: 44rpx;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 16rpx;
}

.menu-label {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--gray-900);
}

.menu-badge {
  min-width: 40rpx;
  height: 40rpx;
  padding: 0 12rpx;
  background: var(--orange);
  color: var(--white);
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-arrow {
  font-size: 40rpx;
  color: var(--gray-300);
}
