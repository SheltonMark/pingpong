.register-page {
  min-height: 100vh;
  background: var(--gray-50);
}

/* 头部 */
.header {
  position: relative;
  padding: 60rpx 40rpx 80rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--orange) 0%, #FF8533 100%);
}

.header-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--white);
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 表单区域 */
.form-section {
  margin-top: -20rpx;
  padding: 40rpx 32rpx;
  background: var(--white);
  border-radius: 40rpx 40rpx 0 0;
  min-height: calc(100vh - 240rpx);
}

.form-label-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-900);
  margin-bottom: 24rpx;
  margin-top: 16rpx;
}

/* 用户类型选择 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.type-item {
  padding: 24rpx 8rpx;
  background: var(--gray-50);
  border-radius: 16rpx;
  text-align: center;
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.type-item.selected {
  background: var(--orange-light);
  border-color: var(--orange);
}

.type-label {
  font-size: 26rpx;
  color: var(--gray-600);
}

.type-item.selected .type-label {
  color: var(--orange);
  font-weight: 600;
}

/* 表单 */
.form-row {
  display: flex;
  gap: 24rpx;
}

.form-row .form-group {
  flex: 1;
}

.form-group {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--gray-700);
  margin-bottom: 16rpx;
  display: block;
}

.form-label .required {
  color: var(--red);
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  border: 4rpx solid var(--gray-200);
  border-radius: 24rpx;
  font-size: 30rpx;
  line-height: 96rpx;
  color: var(--gray-900);
  background: var(--white);
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--orange);
}

.form-input::placeholder {
  color: var(--gray-400);
}

/* 提示框 */
.tip-box {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  margin: 32rpx 0;
}

.tip-yellow {
  background: #FEF3C7;
}

.tip-blue {
  background: #DBEAFE;
}

.tip-green {
  background: var(--green-light);
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: var(--gray-700);
  line-height: 1.6;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: var(--orange);
  color: var(--white);
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  margin-top: 40rpx;
}

.submit-btn:active {
  background: var(--orange-dark);
}

.submit-btn[disabled] {
  background: var(--gray-300);
  color: var(--gray-500);
}

/* 头像选择 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.avatar-btn {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-btn::after {
  display: none;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid var(--gray-200);
}

.avatar-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--gray-500);
}
