/* pages/score-confirm/score-confirm.wxss */
.score-confirm-page {
  min-height: 100vh;
  background: var(--gray-50);
  padding: 24rpx 32rpx;
  padding-bottom: 160rpx;
}

/* 对阵卡片 */
.match-card {
  background: var(--white);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.player-side {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.player-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 32rpx;
  background: var(--gray-100);
}

.player-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-900);
}

.score-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.total-score {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-num {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--gray-400);
}

.score-num.winner {
  color: var(--orange);
}

.score-colon {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--gray-300);
}

.score-label {
  font-size: 24rpx;
  color: var(--gray-400);
  margin-top: 8rpx;
}

/* 比分详情卡片 */
.scores-card {
  background: var(--white);
  border-radius: 24rpx;
  padding: 32rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--gray-700);
  margin-bottom: 24rpx;
}

.score-rows {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.score-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 28rpx;
  border-radius: 16rpx;
}

.score-row.player1-win {
  background: var(--green-light);
}

.score-row.player1-win .game-score {
  color: var(--green);
}

.score-row.player2-win {
  background: #FEE2E2;
}

.score-row.player2-win .game-score {
  color: var(--red);
}

.game-label {
  font-size: 26rpx;
  color: var(--gray-600);
}

.game-score {
  font-size: 28rpx;
  font-weight: 600;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: var(--white);
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  gap: 24rpx;
}

.dispute-btn {
  flex: 1;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--gray-600);
  background: var(--gray-100);
  border-radius: 28rpx;
  border: none;
}

.confirm-btn {
  flex: 1;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--white);
  background: var(--green);
  border-radius: 28rpx;
  border: none;
}

.confirm-btn[disabled] {
  opacity: 0.6;
}

.loading {
  text-align: center;
  padding: 100rpx;
  color: var(--gray-400);
  font-size: 28rpx;
}
