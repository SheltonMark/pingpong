.register-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

.event-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.event-tags {
  display: flex;
  gap: 20rpx;
  margin-bottom: 28rpx;
}

.event-status {
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  background: #FEF3C7;
  color: #D97706;
}

.event-type {
  font-size: 24rpx;
  color: #9CA3AF;
}

.event-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
}

.event-details {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-icon {
  font-size: 28rpx;
}

.detail-text.highlight {
  color: #FF6B00;
  font-weight: 500;
}

.info-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.card-count {
  font-size: 26rpx;
  color: #FF6B00;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 32rpx 36rpx;
  background: #F9FAFB;
  margin: 0 36rpx 36rpx;
  border-radius: 24rpx;
}

.user-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 32rpx;
  background: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
}

.user-details {
  flex: 1;
  margin-left: 28rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.user-dept {
  font-size: 26rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.user-points {
  text-align: right;
}

.points-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #FF6B00;
  display: block;
}

.points-label {
  font-size: 22rpx;
  color: #9CA3AF;
  display: block;
}

.registered-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 0 36rpx 36rpx;
}

.registered-user {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #F9FAFB;
  border-radius: 40rpx;
}

.small-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 16rpx;
  background: #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.small-name {
  font-size: 26rpx;
  margin-left: 16rpx;
}

.registered-more {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #FFF5EB;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #FF6B00;
}

.notice-box {
  margin: 32rpx 0;
  padding: 28rpx 32rpx;
  background: #F9FAFB;
  border-radius: 24rpx;
}

.notice-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.notice-item {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.8;
}

.submit-btn {
  position: fixed;
  bottom: 48rpx;
  left: 24rpx;
  right: 24rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 0, 0.35);
}

.submit-btn[disabled] {
  opacity: 0.6;
}

.loading {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}
