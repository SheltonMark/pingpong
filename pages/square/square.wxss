.square-page {
  min-height: 100vh;
  background: #FFFFFF;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.square-header {
  position: sticky;
  top: 0;
  z-index: 999;
  background: #FFFFFF;
  padding-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 400;
  line-height: 1;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 0, 0.3);
}

/* 学校标签滚动 */
.school-tabs {
  white-space: nowrap;
  padding: 0 32rpx 16rpx;
}

.school-tabs::-webkit-scrollbar {
  display: none;
}

.school-tab {
  display: inline-block;
  padding: 14rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  background: #F0F0F0;
}

.school-tab.active {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-weight: 500;
}

/* 筛选行 */
.filter-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 0 32rpx 16rpx;
}

/* 学校选择器下拉框 */
.school-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #F0F0F0;
  padding: 14rpx 24rpx;
  border-radius: 32rpx;
  flex-shrink: 0;
}

.selector-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.selector-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 内容类型标签 */
.type-tabs {
  display: flex;
  gap: 12rpx;
}

.type-tab {
  display: inline-block;
  padding: 10rpx 24rpx;
  margin-right: 12rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  background: transparent;
  border: 1rpx solid #E0E0E0;
}

.type-tab.active {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  color: #FFFFFF;
  font-weight: 500;
  border-color: transparent;
}

/* 帖子列表 */
.post-list {
  flex: 1;
  min-height: 0;
  padding-top: 16rpx;
  padding-bottom: 200rpx;
  box-sizing: border-box;
  background: #FFFFFF;
}

.post-item {
  background: #FFFFFF;
  margin: 0 24rpx 20rpx;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  border: 1rpx solid #F0F0F0;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 14rpx;
  margin-right: 20rpx;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.post-meta {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

.post-content {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

/* 约球卡片 */
.match-box {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.match-box.standalone {
  margin-bottom: 0;
}

.match-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.match-detail {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 16rpx;
}

.match-progress {
  margin-bottom: 16rpx;
}

.match-progress .progress-text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

.match-join {
  background: #FFFFFF;
  color: #FF6B00;
  font-size: 28rpx;
  font-weight: 600;
  padding: 16rpx 0;
  border-radius: 24rpx;
  border: none;
  width: 100%;
}

.match-join::after {
  border: none;
}

.match-status {
  text-align: center;
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  padding: 12rpx 0;
}

/* 图片网格 */
.post-images {
  display: grid;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.post-images.single {
  grid-template-columns: 1fr;
}

.post-images.single .post-image {
  max-width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
}

.post-images.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.post-images.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 互动栏 */
.post-actions {
  display: flex;
  gap: 48rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 爱心图标 */
.icon-heart {
  font-size: 34rpx;
  line-height: 1;
}

/* 点赞后数字变红 */
.action-item.liked .action-count {
  color: #FF4757;
}

/* 评论图标 */
.icon-comment {
  font-size: 34rpx;
  line-height: 1;
}

.action-count {
  font-size: 28rpx;
  color: #AAAAAA;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}

.load-more, .no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}
