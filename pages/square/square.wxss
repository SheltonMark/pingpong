.square-page {
  min-height: 100vh;
  background: #F5F5F5;
}

/* 顶部标题栏 */
.square-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #FFFFFF;
  padding-bottom: 16rpx;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 400;
  line-height: 1;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 0, 0.3);
}

/* 学校标签滚动 */
.school-tabs {
  white-space: nowrap;
  padding: 0 32rpx 16rpx;
}

.school-tabs::-webkit-scrollbar {
  display: none;
}

.school-tab {
  display: inline-block;
  padding: 14rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  background: #F0F0F0;
}

.school-tab.active {
  background: #1A1A1A;
  color: #FFFFFF;
  font-weight: 500;
}

/* 帖子列表 */
.post-list {
  height: calc(100vh - 180rpx);
  padding-top: 16rpx;
  padding-bottom: 120rpx;
}

.post-item {
  background: #FFFFFF;
  margin: 0 24rpx 20rpx;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 14rpx;
  margin-right: 20rpx;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.post-meta {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

.post-content {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

/* 约球卡片 */
.match-box {
  background: linear-gradient(135deg, #FF6B00, #E55D00);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.match-box.standalone {
  margin-bottom: 0;
}

.match-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.match-detail {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 16rpx;
}

.match-progress {
  margin-bottom: 16rpx;
}

.match-progress .progress-text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

.match-join {
  background: #FFFFFF;
  color: #FF6B00;
  font-size: 28rpx;
  font-weight: 600;
  padding: 16rpx 0;
  border-radius: 24rpx;
  border: none;
  width: 100%;
}

.match-join::after {
  border: none;
}

.match-status {
  text-align: center;
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  padding: 12rpx 0;
}

/* 图片网格 */
.post-images {
  display: grid;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.post-images.single {
  grid-template-columns: 1fr;
}

.post-images.single .post-image {
  max-width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
}

.post-images.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.post-images.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 互动栏 */
.post-actions {
  display: flex;
  gap: 48rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.action-item.liked .action-count {
  color: #EF4444;
}

/* 爱心图标 */
.icon-heart {
  width: 36rpx;
  height: 32rpx;
  position: relative;
}

.icon-heart::before,
.icon-heart::after {
  content: '';
  position: absolute;
  top: 0;
  width: 18rpx;
  height: 28rpx;
  border-radius: 18rpx 18rpx 0 0;
  border: 3rpx solid #9CA3AF;
  border-bottom: none;
}

.icon-heart::before {
  left: 0;
  transform: rotate(-45deg);
  transform-origin: bottom right;
}

.icon-heart::after {
  right: 0;
  transform: rotate(45deg);
  transform-origin: bottom left;
}

.action-item.liked .icon-heart::before,
.action-item.liked .icon-heart::after {
  border-color: #EF4444;
  background: #EF4444;
}

/* 评论图标 */
.icon-comment {
  width: 36rpx;
  height: 32rpx;
  border: 3rpx solid #9CA3AF;
  border-radius: 8rpx;
  position: relative;
}

.icon-comment::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 8rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #9CA3AF;
}

.action-count {
  font-size: 26rpx;
  color: #9CA3AF;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}

.load-more, .no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}
