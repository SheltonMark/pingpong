.user-profile-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 24rpx;
}

.profile-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.user-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 40rpx;
  background: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin: 0 auto;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-top: 24rpx;
  display: block;
}

.user-info {
  font-size: 26rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  display: block;
}

.user-stats {
  display: flex;
  justify-content: center;
  gap: 48rpx;
  margin-top: 32rpx;
}

.stat-item {
  text-align: center;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
}

.stat-num.orange {
  color: #FF6B00;
}

.stat-label {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
  display: block;
}

.records-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  padding: 36rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.record-list {
  padding: 0 36rpx 36rpx;
}

.record-item {
  background: #F9FAFB;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-info {
  display: flex;
  flex-direction: column;
}

.opponent-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.match-meta {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 6rpx;
}

.result {
  font-size: 32rpx;
  font-weight: 700;
}

.result.win {
  color: #10B981;
}

.result.lose {
  color: #EF4444;
}

.loading, .empty, .error {
  text-align: center;
  padding: 60rpx;
  font-size: 28rpx;
  color: #9CA3AF;
}
